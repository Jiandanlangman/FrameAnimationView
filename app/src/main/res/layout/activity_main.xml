<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F0000"
    tools:context=".MainActivity">


    <TextView
        android:text="Hello World"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.jiandanlangman.frameanimationview.FrameAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />



    <Button
        android:alpha=".5"
        android:id="@+id/start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintRight_toLeftOf="@id/stop"
        android:layout_width="wrap_content"
        android:text="START"
        android:layout_height="wrap_content" />

    <Button
        android:alpha=".5"
        android:id="@+id/stop"
        app:layout_constraintRight_toLeftOf="@id/visible"
        app:layout_constraintLeft_toRightOf="@id/start"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:text="STOP"
        android:layout_height="wrap_content" />


    <Button
        android:alpha=".5"
        android:id="@+id/visible"
        app:layout_constraintRight_toLeftOf="@id/gone"
        app:layout_constraintLeft_toRightOf="@id/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:text="VISIBLE"
        android:layout_height="wrap_content" />



    <Button
        android:alpha=".5"
        android:id="@+id/gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:text="GONE"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>